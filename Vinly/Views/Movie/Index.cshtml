@model IEnumerable<Vinly.Models.Movie>
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>

<p>
    @Html.ActionLink("Add Movie", "New", "Movie",null, new { @class = "btn btn-primary"})
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
                <td>@movie.MovieGenre.Name</td>
            </tr>
        }
    </tbody>
</table>
